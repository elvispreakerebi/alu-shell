#!/usr/bin/env bash
# This script displays numbers from 1 to 20, with special messages for 4, 9, and 17 using a while loop and case statement

i=1

while [ $i -le 20 ]
do
    case $i in
        4)
            echo "$i - bad luck from China"
            ;;
        9)
            echo "$i - bad luck from Japan"
            ;;
        17)
            echo "$i - bad luck from Italy"
            ;;
        *)
            echo "$i"
            ;;
    esac
    ((i++))
done
